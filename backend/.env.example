# ==========================================
# Kitsu Enterprise — Environment Variables
# Copy to .env and fill in your values
# ==========================================

# App
APP_NAME="Kitsu Enterprise API"
API_ENV=development
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://kitsu:yourpassword@localhost:5432/kitsu

# Redis
REDIS_URL=redis://localhost:6379/0

# Security — MUST CHANGE IN PRODUCTION
SECRET_KEY=your-secret-key-min-32-chars-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Superuser (created on first run of initial_data)
FIRST_SUPERUSER_EMAIL=admin@yoursite.com
FIRST_SUPERUSER_PASSWORD=change_this_immediately

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000

# Providers
SHIKIMORI_URL=https://shikimori.one
KODIK_URL=https://kodikapi.com
KODIK_API_KEY=your_kodik_api_key_here

# Email / SMTP (optional but recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@yoursite.com
FRONTEND_URL=http://localhost:3000

# Media
MEDIA_ROOT=/app/media
STATIC_HOST=http://localhost:8000/media

# Monitoring (optional)
SENTRY_DSN=
